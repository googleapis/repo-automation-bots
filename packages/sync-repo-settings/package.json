    "@types/extend": "^3.0.1",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.6",
    "c8": "^7.1.0",
    "cross-env": "^7.0.0",
    "gts": "^2.0.0",
    "mocha": "^8.0.0",
    "nock": "^13.0.0",
    "snap-shot-it": "^7.9.0",
    "typescript": "^3.9.6"
  },
  "engines": {
    "node": ">= 10.17.0"
  }
