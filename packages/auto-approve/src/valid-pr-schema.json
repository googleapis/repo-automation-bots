{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "@google-automations/auto-approve/v1",
  "description": "A PR safe to merge",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "rules": {
      "type": "array",
      "uniqueItems": true,
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/aPR"
      }
    }
  },
  "definitions": {
    "aPR": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "author",
        "title"
      ],
      "properties": {
        "author": {
          "description": "The author of a PR",
          "enum": [
            "googleapis-publisher",
            "yoshi-automation",
            "release-please[bot]",
            "yoshi-code-bot",
            "gcf-owl-bot[bot]",
            "renovate-bot"
          ]
        },
        "title": {"type": "string"},
        "changedFiles": {"type": "array"},
        "maxFiles": {"type": "number"}
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "author": {
                "type": "string",
                "const": "googleapis-publisher"
              }
            }
          },
          "then": {
            "properties": {
              "title": {
                "type": "string",
                "const": "^chore: autogenerated discovery document update"
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "author": {
                "const": "yoshi-automation"
              }
            }
          },
          "then": {
            "properties": {
              "title": {
                "type": "string",
                "const": "^chore: regenerate README$"
              },
              "changedFiles": {
                "type": "array",
                "maxItems": 2,
                "items": {
                  "enum": [
                    "^README.md$",
                    "^\\.github/readme/synth\\.metadata/synth\\.metadata$"
                  ]
                }
              },
              "maxFiles": {
                "type": "number",
                "maximum": 2
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "author": {
                "type": "string",
                "const": "release-please[bot]"
              }
            }
          },
          "then": {
            "properties": {
              "title": {
                "type": "string",
                "const": "^chore: release"
              },
              "changedFiles": {
                "type": "array",
                "maxItems": 2,
                "items": {
                  "enum": [
                    "package\\.json$",
                    "CHANGELOG\\.md$"
                  ]
                }
              },
              "maxFiles": {
                "type": "number",
                "maximum": 3
              }
            }
          }
        },
        {
            "if": {
              "properties": {
                "author": {
                  "type": "string",
                  "const": "yoshi-code-bot"
                }
              }
            },
            "then": {
              "properties": {
                "title": {
                  "type": "string",
                  "const": "^chore: Update discovery artifacts"
                },
                "changedFiles": {
                  "type": "array",
                  "items": {
                    "enum": [
                      "^docs/dyn/index.md$",
                      "^docs/dyn/.*\\.html$",
                      "^googleapiclient/discovery_cache/documents/.*\\.json$"
                    ]
                  }
                }
              }
            }
          },
          {
            "if": {
              "properties": {
                "author": {
                  "type": "string",
                  "const": "gcf-owl-bot[bot]"
                }
              }
            },
            "then": {
              "properties": {
                "title": {
                  "type": "string",
                  "const": "^chore"
                },
                "changedFiles": {
                  "type": "array",
                  "items": {
                    "enum": [
                      "^\\.OwlBot\\.lock\\.yaml$"
                    ]
                  }
                },
                "maxFiles": {
                  "type": "number",
                  "maximum": 1
                }
              }
            }
          },
          {
            "if": {
              "properties": {
                "author": {
                  "type": "string",
                  "const": "renovate-bot"
                }
              }
            },
            "then": {
              "properties": {
                "title": {
                  "type": "string",
                  "const": "^(fix\\(deps\\)|chore\\(deps\\)):"
                },
                "changedFiles": {
                  "type": "array",
                  "items": {
                    "enum": [
                      "/package\\.json$",
                      "/pom\\.xml$",
                      "/requirements\\.txt"
                    ]
                  }
                },
                "maxFiles": {
                  "type": "number",
                  "maximum": 2
                }
              }
            }
          }
      ]
    }
  }
 }
 