{
  "$schema": "http://json-schema.org/schema#",
  "$id": "v1",
  "description": "A PR safe to merge",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "rules": {
      "type": "array",
      "uniqueItems": true,
      "minItems": 1,
      "additionalProperties": false,
      "items": {
        "$ref": "#/definitions/aPR"
      }
    }
  },
  "definitions": {
    "aPR": {
      "type": "object",
      "required": [
        "author",
        "title"
      ],
      "properties": {
        "author": {
          "description": "The author of a PR",
          "enum": [
            "googleapis-publisher",
            "yoshi-automation",
            "yoshi-code-bot"
          ]
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "author": {
                "type": "string",
                "const": "googleapis-publisher"
              }
            }
          },
          "then": {
            "properties": {
              "title": {
                "type": "string",
                "const": "^chore: autogenerated discovery document update"
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "author": {
                "const": "yoshi-automation"
              }
            }
          },
          "then": {
            "properties": {
              "title": {
                "type": "string",
                "const": "^chore: regenerate README$"
              },
              "changedFiles": {
                "type": "array",
                "maxItems": 2,
                "items": {
                  "enum": [
                    "^README.md$",
                    "^\\.github/readme/synth\\.metadata/synth\\.metadata$"
                  ]
                }
              },
              "maxFiles": {
                "type": "number",
                "maximum": 2
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "author": {
                "type": "string",
                "const": "yoshi-code-bot"
              }
            }
          },
          "then": {
            "properties": {
              "title": {
                "type": "string",
                "const": "^chore: release"
              },
              "changedFiles": {
                "type": "array",
                "maxItems": 2,
                "items": {
                  "enum": [
                    "package.json$",
                    "CHANGELOG.md$"
                  ]
                }
              },
              "maxFiles": {
                "type": "number",
                "maximum": 3
              }
            }
          }
        }
      ]
    }
  }
 }
 